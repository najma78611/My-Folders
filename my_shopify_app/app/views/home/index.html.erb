<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>
<div class="container">
  <h2>Products</h2>
  <ul class="list-group">
    <% @products.each do |product| %>
      <li class="list-group-item"><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
    <% end %>
  </ul>

  <h2>User-side View for Products</h2>
  <ul class="list-group">
    <% @products.each do |product| %>
      <li class="list-group-item"><%= link_to product.title, "https://#{@shop_session.url}/products/#{product.title.tr("'", "").parameterize}", target: "_top" %></li>
    <% end %>
  </ul>

  <h2>Webhooks</h2>
  <% if @webhooks.present? %>
    <ul class="list-group">
      <% @webhooks.each do |webhook| %>
        <!-- <li class="list-group-item"><%#= webhook.topic %> : <%#= webhook.address %></li> -->
        <li class="list-group-item"><%= link_to webhook.id, "https://#{@shop_session.url}/admin/webhooks/#{webhook.id}", target: "_top" %>
      <% end %>
    </ul>
  <% else %>
    <p>This app has not created any webhooks for this Shop. Add webhooks to your ShopifyApp initializer if you need webhooks</p>
  <% end %>
</div>


